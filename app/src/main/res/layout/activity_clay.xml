<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE7F5FBA"
    tools:context=".ClayActivity">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="350dp"
        android:layout_height="213dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clay" />

    <ScrollView
        android:layout_width="346dp"
        android:layout_height="380dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Clay Soil"
                android:textColor="#FFEB3B"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView58"
                android:layout_width="match_parent"
                android:layout_height="385dp"
                android:lineSpacingExtra="14sp"
                android:text="Clay soils are the heaviest of soil types and are often considered the hardest to work with. They hold onto water and often take longer to warm in the spring. Soil compaction and cracking is also a big risk of clay soils. Ultimately this doesnâ€™t just look ugly. It also keep plant roots from breaking through hard layers of clay. Unlike sandy soils, clay soils are rich with nutrients! by using it, nutrients are stored for much longer and have a tendency not to leech away."
                android:textColor="#FDF9F9"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ADVANTAGE"
                android:textColor="#75F8E9"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="300dp"
                android:layout_height="95dp"
                android:lineSpacingExtra="10sp"
                android:text="Clay soils hold onto nutrients so the plant has the food it needs and Great for growing things that need a lot of water"
                android:textColor="#FDF9F9"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISADVANTAGES"
                android:textColor="#75F8E9"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="308dp"
                android:layout_height="94dp"
                android:lineSpacingExtra="10sp"
                android:text="Holds onto water, slow to drain ,Slow to warm in the spring, Compacts easily and Tends to be alkaline"
                android:textColor="#FDF9F9"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>